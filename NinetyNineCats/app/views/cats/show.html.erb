<table>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name %></td>
    <td><%= @cat.birthdate %></td>
    <td><%= @cat.color %></td>
    <td><%= @cat.sex %></td>
    <td><%= @cat.description %></td>
  </tr>

</table>
<table>
  <tr>
    <th>Cat ID</th>
    <th>Start date</th>
    <th>End Date</th>
  </tr>
  <% @cat.cat_rental_requests.each do |crr| %>
    <tr>
      <td><%= crr.id %></td>
      <td><%= crr.start_date %></td>
      <td><%= crr.end_date %></td>
    </tr>
  <% end %>

</table>
